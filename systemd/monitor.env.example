# Thresholds (percentages)
MONITOR_CPU_THRESHOLD=80
MONITOR_MEM_THRESHOLD=80
MONITOR_DISK_THRESHOLD=80
MONITOR_IOWAIT_THRESHOLD=30

# Disk path to monitor
MONITOR_DISK_PATH=/

# Sampling interval (Go duration format, e.g. 10s, 1m)
MONITOR_INTERVAL=10s

# Webhook settings (must be configured before alerts can be sent)
MONITOR_WEBHOOK_URL=
MONITOR_SERVICE_NAME=system-monitor-service
MONITOR_ALERT_TYPE=accountAnomaly
MONITOR_ALERT_STATUS=warning
MONITOR_ACCOUNT_ID=
MONITOR_ACCOUNT_NAME=
MONITOR_PLATFORM=system
